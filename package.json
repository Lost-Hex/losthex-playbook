{
  "name": "losthex-playbook",
  "version": "1.0.0",
  "private": true,
  "description": "LostHex discovery and pre-project documentation",
  "scripts": {
    "lint:markdown": "markdownlint '**/*.md' --ignore '**/node_modules/**' --config tooling/.markdownlint.json --rules tooling/lint-rules/",
    "lint:markdown:fix": "markdownlint '**/*.md' --ignore '**/node_modules/**' --config tooling/.markdownlint.json --rules tooling/lint-rules/ --fix",
    "lint:prose": "vale --config .vale.ini docs/ teardowns/",
    "lint:all": "npm run lint:markdown && npm run lint:prose",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "markdownlint-cli": "^0.43.0"
  }
}
